extends layout

block content
    h1= title
    if ingredients.length > 0
        table.table
            thead
                tr
                    th Ingredient
                    th Approved
            tbody
                each ingredient in ingredients
                    tr(class=ingredient.approved ? 'success' : 'danger')
                        td #{ingredient.name}
                        td #{ingredient.approved}
    else
        p No ingredients have been added yet

    a#add.btn.btn-primary(href="../admin/ingredient") Add Ingredient