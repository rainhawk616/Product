doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        title= title
        link(rel='stylesheet' href='/bootstrap-3.3.6-dist/css/bootstrap.css')
        link(rel='stylesheet' href='/stylesheets/style.css')
        script(src='/javascript/lib/jquery-1.12.3.js')
        script(src='/bootstrap-3.3.6-dist/js/bootstrap.min.js')
        script(src='/javascript/custom.js')
    body
        nav.navbar.navbar-default.navbar-static-top
            .container
                .navbar-header
                    button.navbar-toggle.collapsed(type='button' data-toggle='collapse' data-target='#navbar' aria-expanded='false' aria-controls='navbar')
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='/admin/dashboard') Contradistinction
                #navbar.navbar-collapse.collapse
                    ul.nav.navbar-nav
                        li(class=(title == 'Dashboard') ? 'active' : undefined)
                            a(href='/admin/dashboard') Dashboard
                        li(class=(title == 'Brands') ? 'active' : undefined)
                            a(href='/admin/brands') Brands
                        li(class=(title == 'Products') ? 'active' : undefined)
                            a(href='/admin/products') Products
                        li(class=(title == 'Ingredients') ? 'active' : undefined)
                            a(href='/admin/ingredients') Ingredients
                            li(class=(title == 'Result Type') ? 'active' : undefined)
                                a(href='/admin/results') Results
                    ul.nav.navbar-nav.navbar-right
                        if( user.admin )
                            li
                                a(href='/user/dashboard') User
                        li.dropdown
                            a.dropdown-toggle(href='#' data-toggle='dropdown' role='button' aria-haspopup='true' aria-expanded='false')
                                | #{user.email}
                                span.caret
                            ul.dropdown-menu
                                li
                                    a(href='/admin/account') Account
                                li.divider(role='separator')
                                li
                                    a(href='/logout') Logout
        .container
            .row
                .col-xs-10.col-xs-offset-1
                    .row
                        include ../partials/flash
                    .row
                        block content

        include ../partials/footer
